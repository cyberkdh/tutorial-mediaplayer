<Window x:Class="net_wpf_audioplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:net_wpf_audioplayer"
		xmlns:fl="clr-namespace:net_wpf_audioplayer.module"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
		ResizeMode="NoResize"
		SizeToContent="Height"
        Title="MainWindow" Height="116" Width="444" Closing="Window_Closing" Loaded="Window_Loaded" >
	<Grid Margin="10,0,10,10">
		<Grid.Resources>
			<ResourceDictionary>
				<fl:SecsToTimeConverter x:Key="SecsToTimeConverter" />
			</ResourceDictionary>

		</Grid.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" MinHeight="50px" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Margin="0,0,0,0" Grid.Column="0" Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			
			
			<Label x:Name="m_lbl_CurInfo" d:Content="00:00:00" HorizontalAlignment="Left" VerticalAlignment="Center" DockPanel.Dock="Left" Grid.Row="0" Grid.Column="0"
				   Content="{Binding Cur_Pos, Converter={StaticResource SecsToTimeConverter}}"/>
			<Slider x:Name="m_slider" VerticalAlignment="Center" Minimum="0" Maximum="100" 
				IsSelectionRangeEnabled="True" 
				IsSnapToTickEnabled="False" 
				Focusable="False"				
				Margin="10,0,10,0"		
				Foreground="{DynamicResource MaterialDesign.Brush.Primary}"
				Grid.Row="0" Grid.Column="1">
			</Slider>
			<Label x:Name="m_lbl_TotalInfo" d:Content="00:00:00" VerticalAlignment="Center"  DockPanel.Dock="Right" Grid.Row="0" Grid.Column="2"
				   Content="{Binding Cur_Duration, Converter={StaticResource SecsToTimeConverter}}"/>
		</Grid>
		<Grid Grid.Column="0" Grid.Row="1" Margin="0,10,0,0">

			<Grid.Resources>
				<ResourceDictionary>
					<Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
						<Setter Property="Width" Value="32"/>
						<Setter Property="Height" Value="32"/>
						<Setter Property="Focusable" Value="False"/>
					</Style>
				</ResourceDictionary>
			</Grid.Resources>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<Button x:Name="m_btnOpen" Content="Open" Click="OnProcControls" Grid.Row="0" Grid.Column="0"/>
			<Button x:Name="m_btnPlay" Content="Play" Click="OnProcControls" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0"/>

			<Button x:Name="m_btnVolumeMute" Grid.Column="3" Foreground="{DynamicResource MaterialDesign.Brush.Secondary}" Click="OnProcControls">
				<Button.Style>
					<Style TargetType="Button" BasedOn="{StaticResource IconButton}">
						<Setter Property="Content" Value="{materialDesign:PackIcon Kind=VolumeHigh}"/>
					</Style>
				</Button.Style>
			</Button>

			<Slider x:Name="m_slider_volume" Grid.Row="0" Grid.Column="4" 
					Foreground="{DynamicResource MaterialDesign.Brush.Secondary}" 
					Focusable="False" Margin="0,0,6,6" Width="100" VerticalAlignment="Bottom" Minimum="0" Maximum="100" d:Maximum="150" d:Value="75" Value="50"/>

		</Grid>
	</Grid>
</Window>
